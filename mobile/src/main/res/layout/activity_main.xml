<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				tools:context=".MainActivity"
				android:id="@+id/defaultRelativeLayout">

	<TextView
		android:id="@+id/welcomeText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:text="Welcome!"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="50dp"/>

	<Button
		android:id="@+id/exerciseButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:text="exercise overview"
		android:layout_below="@+id/welcomeText"
		android:layout_marginTop="25dp"
		android:layout_alignParentEnd="true"
		android:layout_centerHorizontal="true"
		android:layout_alignParentTop="false"
		android:layout_alignParentLeft="false"
		android:enabled="true"
		android:elegantTextHeight="false"
		android:clickable="true"
		android:minHeight="125dp"/>

	<Button
		android:id="@+id/historyButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:text="History"
		android:layout_below="@+id/exerciseButton"
		android:layout_alignParentStart="true"
		android:minHeight="125dp"/>


	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/historyButton"
		android:layout_marginTop="25dp"
		android:orientation="horizontal"
		android:id="@+id/debugGridLayout">

		<TextView
			android:id="@+id/debugTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/testTextView"
			android:layout_alignParentEnd="true"
			android:layout_alignParentStart="true"
			android:text="Debug Options"
			android:textSize="25dp"
			android:layout_row="0"
			android:layout_column="0"/>

		<TextView
			android:id="@+id/testTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/androidButton"
			android:text="@string/hello_world"
			android:layout_row="2"
			android:layout_column="0"/>

		<Button
			android:id="@+id/androidButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentStart="true"
			android:text="Android"
			android:layout_row="3"
			android:layout_column="0"/>

		<Button
			android:id="@+id/tizenButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_toEndOf="@+id/androidButton"
			android:text="Tizen"
			android:layout_row="3"
			android:layout_column="1"/>
	</GridLayout>

</RelativeLayout>
